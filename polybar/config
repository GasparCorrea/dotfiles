menu-0-0 = 
menu-0-0-exec = ~/.config/polybar/logout.sh
menu-0-1 = 
menu-0-1-exec = reboot
menu-0-2 = 
menu-0-2-exec = systemctl suspend
menu-0-3 = 
menu-0-3-exec = shutdown now

